;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;; HUMAN BEHAVIOR ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

to-report human-action
  ifelse (residence = nobody)
  [
    ifelse(area = "home" and lock = false and pcolor > 10)
    [ 
      report "install-house"
    ]
    [
      let p min-one-of patches in-radius blocksize with [ area = "home" and lock = false and pcolor > 10 ] [distance myself]
      if (p != nobody and money > cost) 
      [ 
        face p
        report "move"
      ]
    ]
  ]
  [
    let r one-of patches in-cone 2 180 with [ road? ]
    if (r = nobody) [ set r one-of patches in-radius 2 with [ road? ] ]
    ifelse (r != nobody) [ face r ] [ face min-one-of patches with [ road? ] [distance myself] ]
    report "move"
  ]
  report "idle"
end

